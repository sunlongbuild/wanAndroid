<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--高蒙恩  修改夜间模式  -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- <item name="colorPrimaryDark">@color/white</item>-->

        <item name="colorPrimaryDark">@color/c_e91d65</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LoadingTheme" parent="Theme.AppCompat.Dialog">
        <!--dialog背景设置为透明-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--去掉背景半透明效果-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <color name="transparent">#00ffffff</color>

    <!--孙龙:todo新增页面的点击checkBox的涟漪-->
    <style name="todo_cb">
        <!--波纹的颜色-->
        <item name="android:colorControlHighlight" tools:ignore="NewApi">@color/colorPrimary</item>
        <!--选中的颜色-->
        <item name="colorAccent">@color/c_06bbd6</item>
    </style>
</resources>
