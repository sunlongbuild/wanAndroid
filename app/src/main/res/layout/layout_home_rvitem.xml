<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    >

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_13"
        android:text="大菜鸟" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="你能说说Java中的反射机制吗"
        android:lineSpacingExtra="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_13"
        />

    <TextView
        android:id="@+id/superChapterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/title"
        android:text="Java深入"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_40"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c_999999"

        />

    <TextView
        android:id="@+id/chapterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="反射"
        android:layout_toRightOf="@id/superChapterName"
        android:layout_alignTop="@id/superChapterName"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c_999999"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/niceDate"
        android:text="1天前"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_13"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c_999999"

        />
    <CheckBox
        android:id="@+id/img_shou_home"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_15"
        android:button="@drawable/flowwer_item"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_below="@id/title"
        />
    <View
        android:id="@+id/view_vv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/superChapterName"

        android:layout_marginTop="@dimen/dp_11"
        android:background="@color/c_dcdcdc" />

</RelativeLayout>