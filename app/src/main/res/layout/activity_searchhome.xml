<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.activity.SearchhomeActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tob"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:background="@color/c_e91d65">

        <ImageView
            android:id="@+id/img_fanhui"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_2"
            android:src="@mipmap/icon_left" />

        <EditText
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:background="@null"
            android:textColor="@color/c_c0c0c0"
            android:hint="发现更多干货"
            android:maxLength="15" />

        <ImageView
            android:id="@+id/seach"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/icon_search" />
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:text="热门搜索"
        android:layout_below="@id/tob"
        android:layout_margin="@dimen/dp_10"
        android:textColor="#33ccff"
        />
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lf"
    android:layout_below="@id/text"
    >
</android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:text="搜索历史"
        android:layout_below="@id/lf"
        android:layout_margin="@dimen/dp_10"
        android:textColor="#33ccff"
        />
    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="清空"
        android:layout_alignParentRight="true"
        android:layout_below="@id/lf"
        android:layout_margin="@dimen/dp_10"

        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lishi"
        android:layout_below="@id/text_2"
        ></android.support.v7.widget.RecyclerView>
</RelativeLayout>