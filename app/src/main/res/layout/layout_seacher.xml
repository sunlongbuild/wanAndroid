<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/c_ffffff"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/name"
    android:text="dada"
    android:layout_margin="@dimen/dp_5"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_1"
        android:text="dada"
        android:layout_toRightOf="@id/name"
        android:layout_margin="@dimen/dp_5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_2"
        android:text="dada"
       android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_3"
        android:text="dada"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/sp_18"
        android:layout_marginLeft="@dimen/dp_5"
       android:layout_below="@id/name"
        android:layout_marginTop="@dimen/dp_5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_4"
        android:text="dada"

        android:layout_marginLeft="@dimen/dp_5"
        android:layout_below="@id/text_3"
        android:layout_marginTop="@dimen/dp_5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/text_5"
        android:layout_toRightOf="@id/text_4"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_below="@id/text_3"
        android:layout_marginTop="@dimen/dp_5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_6"
        android:text="/"
        android:layout_toRightOf="@id/text_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_below="@id/text_3"
        android:layout_marginTop="@dimen/dp_5"
        />
    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignTop="@id/text_5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/icon_uxin"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_5"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/c_dcdcdc"
        />
</RelativeLayout>